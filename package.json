{
  "name": "elm-live",
  "version": "3.0.2-alpha.0",
  "description": "A flexible dev server for Elm. Live reload included!",
  "bin": {
    "elm-live": "bin/elm-live.js"
  },
  "dependencies": {
    "chalk": "^1.1.1",
    "chokidar": "1.6.0",
    "commander": "2.17.1",
    "cross-spawn": "^5.0.1",
    "elm-serve": "0.1.1",
    "hasbin": "^1.2.1",
    "indent-string": "^3.0.0"
  },
  "scripts": {
    "develop": "ava --watch",
    "manpages": "scripts/manpages.sh",
    "prepublish": "npm run manpages",
    "test": "nyc ava",
    "format": "npm run standard:fix && npm run standard",
    "standard": "standard",
    "standard:fix": "standard --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format"
    }
  },
  "engines": {
    "node": ">= 6.0.0"
  },
  "engineStrict": true,
  "files": [
    "**/*.js",
    "!/test.js",
    "/Readme.md",
    "/License.md",
    "/manpages/"
  ],
  "man": [
    "/manpages/elm-live.1"
  ],
  "license": "MIT",
  "keywords": [
    "cli",
    "tool",
    "elm"
  ],
  "author": "William King <contact@wking.io>",
  "repository": {
    "type": "git",
    "url": "git@github.com:wking-io/elm-live"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "coveralls": "^2.11.9",
    "dev-null": "^0.1.1",
    "husky": "0.14.3",
    "marked-man": "^0.1.5",
    "nyc": "^8.1.0",
    "proxyquire": "^1.7.4",
    "q-stream": "^0.2.0",
    "standard": "12.0.0",
    "strip-ansi": "^3.0.0"
  }
}
